{
    "name": "zoglo/contao-row-wizard",
    "description": "RowWizard for Contao Open Source CMS",
    "keywords": ["contao", "widget", "wizard"],
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Zoglowek",
            "homepage": "https://github.com/zoglo",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/zoglo/contao-row-wizard/issues",
        "source": "https://github.com/zoglo/contao-row-wizard",
        "forum": "https://community.contao.org"
    },
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^5.3",
        "codefog/contao-haste": "^5.3",
        "symfony/asset": "^6.4 || ^7.0",
        "symfony/http-kernel": "^6.4 || ^7.0",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/event-dispatcher": "^6.4 || ^7.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "shipmonk/composer-dependency-analyser": "^1.8"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Zoglo\\RowWizardBundle\\": "src/"
        }
    },
    "scripts": {
        "depcheck": "@php vendor/bin/composer-dependency-analyser --config=depcheck.php"
    },
    "extra": {
        "contao-manager-plugin": "Zoglo\\RowWizardBundle\\ContaoManager\\Plugin"
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": false,
            "contao/manager-plugin": false,
            "php-http/discovery": false
        }
    }
}
