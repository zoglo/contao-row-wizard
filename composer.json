{
    "name": "zoglo/contao-simple-column-wizard",
    "description": "SimpleColumnWizard for Contao Open Source CMS",
    "keywords": [
        "contao",
        "widget",
        "wizard"
    ],
    "type": "contao-bundle",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Sebastian Zoglowek",
            "homepage": "https://github.com/zoglo",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "5.3.*",
        "codefog/contao-haste": "^5.3",
        "symfony/asset": "^6.4 || ^7.0",
        "symfony/http-kernel": "^6.4 || ^7.0",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/event-dispatcher": "^6.4 || ^7.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.3.1",
        "shipmonk/composer-dependency-analyser": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Zoglo\\ContaoSimpleColumnWizard\\": "src/"
        },
        "classmap": [
            "contao/"
        ],
        "exclude-from-classmap": [
            "contao/templates/"
        ]
    },
    "scripts": {
        "depcheck": "@php vendor/bin/composer-dependency-analyser --config=depcheck.php"
    },
    "extra": {
        "contao-manager-plugin": "Zoglo\\ContaoSimpleColumnWizard\\ContaoManager\\Plugin"
    }
}
